#include <iostream>
#include <math.h>
using namespace std;
int main()
{
    setlocale(LC_ALL, "Russian"); //подключаем русификацию
int day, n;
    cout << "Введите номер дня года: ";
    cin >> day;
    cout << "Введите номер дня недели для 1 января: ";
    cin >> n;
    day = day + n - 1; //задаем номер дня недели
    while (day > 7)
        day -= 7; //определяем номер дня недели
        cout << "Номер дня недели: " << day << endl;
}
